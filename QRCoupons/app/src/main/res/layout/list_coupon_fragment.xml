<?xml version="1.0" encoding="utf-8"?>
  <layout>
  <data/>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".fragments.ListCouponFragment"
  android:background="@color/white">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/c_list_banner_height"
    android:orientation="vertical"
    android:background="@drawable/gradient_list_fragment">

    <!-- GIF ANIMATED -->
    <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/qrscan_fragment_animation_view"
      android:layout_marginStart="@dimen/offset_15"
      android:layout_marginEnd="@dimen/offset_15"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="@dimen/c_list_lottie_height"
      android:layout_gravity="center_vertical"
      app:lottie_rawRes="@raw/love_explosion"
      app:lottie_loop="false"
      app:lottie_autoPlay="true" />
    <!-- END GIF ANIMATED -->

    <android.support.v7.widget.AppCompatTextView
      android:layout_marginTop="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/offset_10"
      android:text="@string/list_coupon_title"
      android:textColor="@color/white"
      android:gravity="center"/>


  </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:layout_marginTop="@dimen/c_list_banner_height"
      android:id="@+id/list_coupon_fragment_recycler_view"
      android:scrollbars="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>



</FrameLayout>
  </layout>