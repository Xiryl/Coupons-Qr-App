<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:clickable="true"
  android:focusable="true"
  android:background="@color/white"
  android:foreground="@drawable/touch_selector"
  android:layout_marginBottom="7dp"
  >
  <ImageView android:layout_width="@dimen/img_colored_height"
    android:layout_marginLeft="@dimen/offset_16"
    android:layout_height="@dimen/offset_60"
    android:clickable="false"
    android:padding="@dimen/offset_4"
    android:id="@+id/qr_item_list_icon"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/offset_16"
    android:layout_marginTop="@dimen/offset_5"
    android:clickable="false"
    android:id="@+id/qr_item_list_title"
    android:textSize="17sp"
    android:textColor="@color/dark_gray"
    android:text="prova"/>
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/qr_item_list_end_date"
    android:clickable="false"
    android:layout_marginEnd="@dimen/offset_15"
    android:layout_marginTop="@dimen/offset_5"
    android:textColor="@color/date_item_list_red"
    android:gravity="end"
    android:text="test"/>

  </LinearLayout>